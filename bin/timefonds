#!/usr/bin/env bash

cli_name=${0##*/}
export CLI_WORKDIR=$(cd $(dirname $0) && pwd)

source $CLI_WORKDIR/lib/common

# Load the .env file
importFile $CLI_WORKDIR/../.conf

cli_help() {
    cli_version
    cli_usage
    exit 1
}

cli_version() {

    echo "
${cli_name}CLI

Internal operations CLI, version $(cat $CLI_WORKDIR/VERSION)
Copyright (C) July 2023, Timefonds AG.
"

}

cli_usage() {
    COMMANDS=${ls}
    echo "
Usage: $cli_name [-h|v] <command>

Global options:
  -h,   for help
  -v,   for version

Available commands:
  test              Locally test a given handler 
  generate-event    generate appsync event with appToken 
  *                 Help
"
    exit 1
}

# Get the options
while getopts "hv" flag; do
    case $flag in
    h) # display Help
        cli_help
        ;;
    v) # display version
        cli_version
        ;;
    ?)
        cli_help
        ;;
    esac
done

case "$1" in
#  ${@:2} essentially refers to all the command-line arguments except for the first one,
test)
    "$CLI_WORKDIR/commands/test" "${@:2}"
    ;;
generate-event)
    "$CLI_WORKDIR/commands/generate-event" "${@:2}"
    ;;
*)
    cli_usage
    ;;
esac

exit 0
